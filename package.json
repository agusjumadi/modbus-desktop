{
  "name": "modbus-desktop-app",
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "electron:dev": "electron electron/main.cjs",
    "start": "concurrently \"npm run dev\" \"npm run electron:dev\"",
    "build": "vite build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "modbus-serial": "^8.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.example.modbusdesktop",
    "productName": "Modbus Desktop",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }

}
